<Window x:Class="UP_Alshakova.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о товаре" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Информация о товаре" 
                   Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Информация о товаре -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Фото товара -->
                <Image x:Name="imgProduct" Source="Images/picture.png" Width="200" Height="200" 
                       Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Основная информация -->
                <TextBlock x:Name="txtProductName" Style="{StaticResource HeaderTextBlockStyle}" 
                          TextAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock x:Name="txtCategory" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtDescription" Style="{StaticResource BaseTextBlockStyle}" 
                          TextWrapping="Wrap" Margin="0,0,0,10"/>

                <!-- Цена и скидка -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock x:Name="txtOriginalPrice" Style="{StaticResource BaseTextBlockStyle}" 
                              Margin="0,0,10,0"/>
                    <TextBlock x:Name="txtFinalPrice" Style="{StaticResource BaseTextBlockStyle}" 
                              FontWeight="Bold"/>
                </StackPanel>

                <!-- Дополнительная информация -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="Дополнительная информация:" Style="{StaticResource BaseTextBlockStyle}" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtManufacturer" Style="{StaticResource BaseTextBlockStyle}"/>
                        <TextBlock x:Name="txtSupplier" Style="{StaticResource BaseTextBlockStyle}"/>
                        <TextBlock x:Name="txtUnit" Style="{StaticResource BaseTextBlockStyle}"/>
                        <TextBlock x:Name="txtStock" Style="{StaticResource BaseTextBlockStyle}"/>
                        <TextBlock x:Name="txtDiscount" Style="{StaticResource BaseTextBlockStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Click="btnClose_Click" 
                Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Center" Margin="0,10"/>
    </Grid>
</Window>