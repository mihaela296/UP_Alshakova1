<Window x:Class="UP_Alshakova.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Смена пароля" 
                   Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Форма смены пароля -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Старый пароль:" Style="{StaticResource BaseTextBlockStyle}"/>
            <PasswordBox x:Name="txtOldPassword" Margin="0,5,0,10"/>

            <TextBlock Text="Новый пароль:" Style="{StaticResource BaseTextBlockStyle}"/>
            <PasswordBox x:Name="txtNewPassword" Margin="0,5,0,10"/>

            <TextBlock Text="Подтвердите новый пароль:" Style="{StaticResource BaseTextBlockStyle}"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Сообщения об ошибках -->
        <TextBlock Grid.Row="2" x:Name="txtError" Style="{StaticResource BaseTextBlockStyle}" 
                   Foreground="Red" Margin="0,10" TextWrapping="Wrap" Visibility="Collapsed"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" 
                    Style="{StaticResource AccentButtonStyle}"/>
            <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click" 
                    Style="{StaticResource AccentButtonStyle}" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>