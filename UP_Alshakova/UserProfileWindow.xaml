<Window x:Class="UP_Alshakova.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Профиль пользователя" 
                   Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Информация о пользователе -->
        <StackPanel Grid.Row="1">
            <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="txtFullName" Style="{StaticResource HeaderTextBlockStyle}" 
                              Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtLogin" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtRole" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtUserID" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,5"/>
                </StackPanel>
            </Border>

            <Button x:Name="btnChangePassword" Content="Сменить пароль" Click="btnChangePassword_Click" 
                    Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Click="btnClose_Click" 
                Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Center" Margin="0,10"/>
    </Grid>
</Window>